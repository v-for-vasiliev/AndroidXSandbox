<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".MainActivity"
        android:orientation="vertical"
        tools:showIn="@layout/activity_location">

    <Button android:id="@+id/get_last_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last location"/>

    <Button android:id="@+id/get_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"/>

    <Button android:id="@+id/get_locations_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Locations history"/>

    <TextView android:layout_marginTop="36dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Last location result:"
              android:gravity="center"/>

    <TextView android:id="@+id/output_last_location"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"/>

    <TextView android:layout_marginTop="36dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Location result:"
              android:gravity="center"/>

    <TextView android:id="@+id/output_location"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"/>

    <TextView android:layout_marginTop="36dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Location history result:"
              android:gravity="center"/>

    <TextView android:id="@+id/output_location_history"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"/>

    <TextView android:id="@+id/error"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"/>

</LinearLayout>